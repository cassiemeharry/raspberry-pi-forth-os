ENTRY(_start)

SECTIONS
{
    /* Starts at LOADER_ADDR. */
    .text :
    {
        __start = .;
        __text_start = .;
        . = 0x00000;
        KEEP(*(.text.vector_table))
        KEEP(*(.text.exception_handlers))

        . = 0x80000;
        KEEP(*(.text.boot))
        *(.text)
    }
    . = ALIGN(4096); /* align to page size */
    __text_end = .;

    __rodata_start = .;
    .rodata :
    {
        *(.rodata)
    }
    . = ALIGN(4096); /* align to page size */
    __rodata_end = .;

    __data_start = .;
    .data :
    {
        *(.data)
    }
    . = ALIGN(4096); /* align to page size */
    __data_end = .;

    __bss_start = .;
    .bss :
    {
        bss = .;
        *(.bss)
    }
    . = ALIGN(4096); /* align to page size */
    __bss_end = .;
    __bss_size = __bss_end - __bss_start;
    __end = .;
}
